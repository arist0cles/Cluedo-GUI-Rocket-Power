package controller;

import java.awt.Color;

import colorschemes.BW;
import colorschemes.Emo;
import colorschemes.Pastel;
import model.Model;
import view.View;

/**
 * The controller translates the user's interactions with the view into actions
 * that the model will perform. In a stand-alone GUI client, user interactions
 * could be button clicks or menu selections. Depending on the context, a
 * controller may also select a new view -- for example, a web page of results
 * -- to present back to the user.
 * 
 * @author Patrick and Kirita
 *
 */
public class Controller {
	private Model model;
	private View view;

	public Controller(Model m) {
		this.model = m;
	}

	public void start(String scheme) {
		switch (scheme) {
		case "Emo":
			Emo emo = new Emo();
			model.setScheme(emo);
			STARTING_COLOR = emo.BACKGROUND;
			this.redraw(emo.BACKGROUND);
			break;
		case "Pastel":
			Pastel p = new Pastel();
			model.setScheme(p);
			STARTING_COLOR = p.BACKGROUND;
			this.redraw(p.BACKGROUND);
			break;
		case "BW":
			BW b = new BW();
			model.setScheme(b);
			STARTING_COLOR = b.BACKGROUND;
			this.redraw(b.BACKGROUND);
			break;
		}
		board.updateScheme();
		this.start(start, color);
	}

	public void setView(View view) {
		this.setView(view);
	}
}
